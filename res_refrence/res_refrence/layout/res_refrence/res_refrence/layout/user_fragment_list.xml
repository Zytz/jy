<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.baidu.homework"
    android:id="@id/user_rl_login"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15.0dip" >

        <RelativeLayout
            android:id="@id/user_info_wrap"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/user_card_head_bg"
                android:orientation="vertical" >

               <!--  <include
                    android:id="@id/user_av_portrait"
                    layout="@layout/common_vw_avatar_big" /> -->

                <LinearLayout
                    android:id="@id/user_material_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="15.0dip"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@id/user_material_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:clickable="false"
                            android:maxWidth="200.0dip"
                            android:singleLine="true"
                            android:text="我是名字"
                            android:textColor="#ffffffff"
                            android:textSize="@dimen/common_text_size_24" />

                        <ImageView
                            android:id="@id/user_material_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="4.0dip"
                            android:src="@drawable/user_fragment_male_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3.0dip"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@id/user_material_tv_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="Lv.20"
                            android:textColor="#ffffffff"
                            android:textSize="@dimen/common_text_size_18" />

                        <View
                            android:id="@id/user_material_school_before"
                            android:layout_width="1.0dip"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:layout_margin="4.0dip"
                            android:background="#ffffffff" />

                        <TextView
                            android:id="@id/user_material_school"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="middle"
                            android:singleLine="true"
                            android:textColor="#ffffffff"
                            android:textSize="@dimen/common_text_size_18" />

                        <View
                            android:id="@id/user_material_grade_before"
                            android:layout_width="1.0dip"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:layout_margin="4.0dip"
                            android:background="#ffffffff" />

                        <TextView
                            android:id="@id/user_material_grade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:textColor="#ffffffff"
                            android:textSize="@dimen/common_text_size_18" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@id/user_unlogin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@id/user_login_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingBottom="10.0dip"
                        android:shadowColor="#cc000000"
                        android:shadowDx="1.0"
                        android:shadowDy="1.0"
                        android:shadowRadius="1.0"
                        android:text="@string/user_activity_unlogin_title"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/common_text_size_24" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@id/user_my_ask"
                        android:layout_width="0.0dip"
                        android:layout_height="55.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/user_fragment_button_bg"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@id/user_my_ask_num"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5.0dip"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#ffffffff"
                            android:textSize="@dimen/common_text_size_18" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5.0dip"
                            android:gravity="center"
                            android:text="@string/user_my_ask"
                            android:textColor="#ffffffff"
                            android:textSize="@dimen/common_text_size_18" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@id/user_my_answer"
                        android:layout_width="0.0dip"
                        android:layout_height="55.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/user_fragment_button_bg"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@id/user_my_answer_num"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5.0dip"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#ffffffff"
                            android:textSize="@dimen/common_text_size_18" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5.0dip"
                            android:gravity="center"
                            android:text="@string/user_my_answer"
                            android:textColor="#ffffffff"
                            android:textSize="@dimen/common_text_size_18" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@id/user_my_post"
                        android:layout_width="0.0dip"
                        android:layout_height="55.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/user_fragment_button_bg"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@id/user_my_post_num"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5.0dip"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#ffffffff"
                            android:textSize="@dimen/common_text_size_18" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5.0dip"
                            android:gravity="center"
                            android:text="@string/user_my_post"
                            android:textColor="#ffffffff"
                            android:textSize="@dimen/common_text_size_18" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@id/user_my_repost"
                        android:layout_width="0.0dip"
                        android:layout_height="55.0dip"
                        android:layout_weight="1.0"
                        android:background="@drawable/user_fragment_button_bg"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@id/user_my_repost_num"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5.0dip"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#ffffffff"
                            android:textSize="@dimen/common_text_size_18" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5.0dip"
                            android:gravity="center"
                            android:text="@string/user_my_repost"
                            android:textColor="#ffffffff"
                            android:textSize="@dimen/common_text_size_18" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:id="@id/btn_setting"
                android:layout_width="wrap_content"
                android:layout_height="48.0dip"
                android:layout_alignParentRight="true"
                android:background="#00000000"
                android:clickable="true"
                android:paddingLeft="25.0dip"
                android:paddingRight="18.0dip"
                android:scaleType="centerInside"
                android:src="@drawable/setting_user_info_btn_selector"
                android:visibility="visible" />
        </RelativeLayout>

        <View
            android:id="@id/user_material_layout_divide_line"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_below="@id/user_info_wrap"
            android:background="#ffb7daf4" />

        <TableLayout
            android:id="@id/user_op_list_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_material_layout_divide_line" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_below="@id/user_op_list_layout"
            android:background="#ffbfbfbf" />
    </RelativeLayout>

</ScrollView>