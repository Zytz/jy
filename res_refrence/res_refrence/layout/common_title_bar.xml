<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/title_bar"
    android:layout_width="fill_parent"
    android:layout_height="48.0dip"
    android:background="@drawable/common_shape_titlebar_bg" >

    <ProgressBar
        android:id="@id/layout_progress_loading"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16.0dip"
        android:indeterminateDrawable="@drawable/common_alert_waiting_anim_white"
        android:visibility="gone" />

    <ImageButton
        android:id="@id/title_left_btn"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:clickable="true"
        android:contentDescription="@null"
        android:onClick="onLeftButtonClicked"
        android:paddingLeft="18.0dip"
        android:paddingRight="25.0dip"
        android:src="@drawable/common_title_selector_left_button_bg" />

    <RelativeLayout
        android:id="@id/titleLayout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:maxWidth="188.0dip" >

        <TextView
            android:id="@id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxWidth="188.0dip"
            android:padding="10.0dip"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:textSize="@dimen/common_text_size_24" />
    </RelativeLayout>

    <Button
        android:id="@id/title_right_btn"
        style="@style/common_yellow_status_button"
        android:layout_width="wrap_content"
        android:layout_height="33.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8.0dip"
        android:gravity="center"
        android:onClick="onRightButtonClicked"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:singleLine="true"
        android:text="提交"
        android:textSize="15.0sp"
        android:visibility="gone" />

    <ImageButton
        android:id="@id/title_right_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:clickable="true"
        android:onClick="onRightButtonClicked"
        android:paddingLeft="25.0dip"
        android:paddingRight="18.0dip"
        android:scaleType="center"
        android:src="@drawable/circle_message_normal"
        android:visibility="gone" />

    <TextView
        android:id="@id/title_right_tv"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onRightButtonClicked"
        android:paddingLeft="18.0dip"
        android:paddingRight="18.0dip"
        android:scaleType="centerInside"
        android:text="举报"
        android:textColor="#ffffffff"
        android:textSize="@dimen/common_text_size_18"
        android:visibility="gone" />

    <ProgressBar
        android:id="@id/title_right_progressBar"
        android:layout_width="25.0dip"
        android:layout_height="25.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13.0dip"
        android:indeterminate="false"
        android:indeterminateDrawable="@drawable/common_alert_waiting_anim_white"
        android:visibility="gone" />

</RelativeLayout>