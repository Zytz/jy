<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView 
    	android:id="@+id/answer_listitem_userface"
    	android:layout_width="30dp"
        android:layout_height="30dp"
      	style="@style/user_face_image"/>

	<LinearLayout
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_marginLeft="6dip"> 
	       	
       	<TextView 
       		android:id="@+id/answer_listitem_username"  
    		android:layout_width="wrap_content" 
           	android:layout_height="wrap_content"
       	    android:includeFontPadding="false"
           	android:textSize="@dimen/text_size_14"
            android:textColor="@color/listitem_blue"/>	         	
        
	    
		<LinearLayout
			android:id="@+id/answer_listitem_relies"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content"
    		android:layout_marginTop="8dip"
    		android:orientation="vertical"
    		android:background="@drawable/review_bg_top">
    			<TextView
    			 android:id="@+id/asnwer_listitem_content" 
	            android:layout_width="wrap_content" 
	         	android:layout_height="wrap_content"
	         	android:textSize="@dimen/text_size_10"
	         	android:textColor="@color/listitem_gray">
    			</TextView>
    			<com.dxt.MyImageView
			            android:id="@+id/answer_listitem_picture"
			            android:layout_width="match_parent"
			            android:layout_height="225dp"
			            android:layout_marginBottom="10.0dip"
			            android:layout_marginTop="8.0dip"
			            />
    	</LinearLayout>
    	
		<LinearLayout 
	    	android:orientation="horizontal" 
	        android:layout_width="fill_parent"  
	        android:layout_height="wrap_content"
	        android:layout_marginTop="8dip"> 
			
	       	<TextView 
	        	android:id="@+id/answer_listitem_date" 
	            android:layout_width="wrap_content" 
	         	android:layout_height="wrap_content"
	         	android:textSize="@dimen/text_size_10"
	         	android:textColor="@color/listitem_gray"/> 
        </LinearLayout>
			        
	</LinearLayout>

</LinearLayout>
