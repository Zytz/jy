<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@id/homework_vw_qb1_header_zuoyejun_split_tag_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10.0dip"
        android:visibility="visible" >

        <View
            android:id="@id/homework_vw_qb1_header_zuoyejun_split_tag_line1"
            android:layout_width="50.0dip"
            android:layout_height="0.5dip"
            android:layout_centerVertical="true"
            android:background="#ffc4c4c4" />

        <TextView
            android:id="@id/homework_vw_qb1_header_zuoyejun_split_tag_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_toRightOf="@id/homework_vw_qb1_header_zuoyejun_split_tag_line1"
            android:text="作业帮搜索到的参考题目"
            android:textColor="#ff888888" />

        <View
            android:id="@id/homework_vw_qb1_header_zuoyejun_split_tag_line2"
            android:layout_width="50.0dip"
            android:layout_height="0.5dip"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/homework_vw_qb1_header_zuoyejun_split_tag_title"
            android:background="#ffc4c4c4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/homework_vw_qb1_header_zuoyejun_answer_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/homework_vw_qb1_header_zuoyejun_split_tag_wrapper"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/common_selector_card_item_bg"
        android:descendantFocusability="blocksDescendants"
        android:padding="11.0dip" >

        <TextView
            android:id="@id/homework_vw_qb1_header_zuoyejun_question_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="6.0dip"
            android:textColor="#ff333333"
            android:textSize="@dimen/common_text_size_20" />

        <com.baidu.homework.common.ui.widget.ListImageView
            android:id="@id/homework_vw_qb1_header_zuoyejun_question_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/homework_vw_qb1_header_zuoyejun_question_name"
            android:layout_marginTop="6.0dip" />

        <View
            android:id="@id/homework_vw_qb1_header_zuoyejun_question_split_line"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@id/homework_vw_qb1_header_zuoyejun_question_picture"
            android:layout_marginBottom="11.0dip"
            android:layout_marginTop="8.0dip"
            android:background="#ffe4e4e4" />

        <TextView
            android:id="@id/homework_vw_qb1_header_zuoyejun_answer_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/homework_vw_qb1_header_zuoyejun_question_split_line"
            android:ellipsize="end"
            android:lineSpacingExtra="6.0dip"
            android:textColor="#ff333333"
            android:textSize="@dimen/common_text_size_20" />

        <com.baidu.homework.common.ui.widget.ListImageView
            android:id="@id/homework_vw_qb1_header_zuoyejun_answer_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/homework_vw_qb1_header_zuoyejun_answer_content"
            android:layout_marginTop="6.0dip" />
    </RelativeLayout>

</RelativeLayout>