<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dxt.view.CameraActivityTest" >

    <LinearLayout
        android:id="@+id/myquestion"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@android:color/holo_blue_light" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="130dp"
            android:text="我的提问" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:text="提交" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/camera_detail"
        android:layout_width="fill_parent"
        android:layout_height="320dp"
        android:layout_below="@+id/myquestion"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dip"
            android:background="@drawable/ask_camera_with_text_pressed"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_camera"
            android:background="#22000000"
            android:textSize="16sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请用最精炼的语言，描述你的作业问题，一次只能问一题，更容易找到大神的回答哦" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/submit_question"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/camera_detail" >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问学霸" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问老师" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="悬赏分" />
    </LinearLayout>

</RelativeLayout>