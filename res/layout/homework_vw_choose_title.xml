<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar"
    android:layout_width="fill_parent"
    android:layout_height="48.0dip"
    android:background="@drawable/common_shape_titlebar_bg" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:padding="10.0dip" >

        <TextView
            android:id="@+id/homework_tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="middle"
            android:maxWidth="188.0dip"
            android:paddingRight="7.0dip"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:singleLine="true"
            android:text="高一全部"
            android:textColor="#ffffffff"
            android:textSize="@dimen/common_text_size_20" />

        <ImageView
            android:id="@+id/homework_questionlist_circle_iv_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="180"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/homework_tv_title_name"
            android:src="@drawable/homework_questionlist_circle_button_normal" />
    </RelativeLayout>

</RelativeLayout>