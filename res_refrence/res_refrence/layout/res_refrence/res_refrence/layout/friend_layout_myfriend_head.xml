<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffefefef"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@id/head_newfirend_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/user_fragment_item_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@id/icon"
            android:layout_width="28.0dip"
            android:layout_height="28.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="15.0dip"
            android:layout_marginTop="10.0dip"
            android:src="@drawable/friend_head_icon" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" >

            <TextView
                android:id="@id/title"
                android:layout_width="105.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="3.0dip"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/friend_newfriend"
                android:textColor="#ff333333"
                android:textSize="@dimen/common_text_size_21" />
        </LinearLayout>

        <TextView
            android:id="@id/unread_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/common_unread_dot_bottom"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="@dimen/common_text_size_15"
            android:visibility="gone" />

        <ImageView
            android:id="@id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15.0dip"
            android:src="@drawable/user_selector_arrow" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="#ffd3d3d3" />

    <View
        android:id="@id/colorview"
        android:layout_width="fill_parent"
        android:layout_height="15.0dip"
        android:background="@color/common_activity_background"
        android:visibility="gone" />

</LinearLayout>